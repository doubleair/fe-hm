.official-item:nth-child(2n) {
    margin-right: 0;
}

.official-layout {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.official-item-header {
    position: relative;
    background-repeat: no-repeat;
    background-position: center center;
    height: 250rpx;
    background-size:cover;
}

.official-text1 {
    position: absolute;
    bottom: 20rpx;
    left: 20rpx;
    color: #FFFFFF;
    font-size: 48rpx;
}

.official-item-body {
    padding: 20rpx;
}

.bucard-item {
    position: relative;
    background-color: #fff;
    border-radius: 12rpx;
    overflow: hidden;
    padding: 30rpx 0;
    box-shadow: 0 0 30rpx 0rpx rgba(0, 0, 0, 0.1);
    margin-bottom: 30rpx;
}

.bucard-item:last-child {
    margin: 0;
}

.official-item-msg {
    position: relative;
    background-color: #FAFAFA;
    border-radius: 6rpx;
    overflow: hidden;
}

.official-item-area1 {
    overflow: hidden;
    padding-bottom: 15rpx;
}

.official-item-area1-1 {
    float: left;
    width: 70%;
    font-size: 38rpx;
    color: #4A4A4A;
}

.official-item-area1-2 {
    float: right;
    width: 30%;
    text-align: right;
}

.bucard-item-v2 {
    overflow: hidden;
    font-size: 24rpx;
    padding-bottom: 15rpx;
    padding: 0 40rpx;
}

.bucard-item-v2-1 {
    float: left;
    color: #999999;
    margin-right: 34rpx;
}

.bucard-item-v2-2 {
    float: right;
    color: #FFAB40;
}

.bucard-item-v2-3 {
    float: right;
    font-size: 33rpx;
    color: #999999;
}

.official-item-focus {
    background-color: #3385ff;
    color: #fff;
}

.official-item-focus::after {
    border: 1rpx solid #2d78f4;
}

.official-item-focus-default {
    color: #999999 !important;
}



