}

.bucard-item-v1 {
    overflow: hidden;
    padding: 0 20rpx;
}

.bucard-item-v1-1 {
    float: left;
    width: 50%;
}

.bucard-item-v1-2 {
    /* padding-right: 40rpx; */
    width: 150rpx;
    height: 110rpx;
    float: left;
    padding-right: 20rpx;
}

.bucard-item-pic {
    width: 110rpx;
    height: 110rpx;
    border-radius: 50%;
}

.follow-container {
    display: flex;
    float: right;
    flex-flow: column;
    justify-content: center;
    align-items: center;
    height: 110rpx;
}

.follow {
    width: 150rpx;
    height: 70rpx;
    line-height: 70rpx;
    color: #fff;
    font-size: 26rpx;
    background-color: #999;
}

.follow.active {
    background-color: #3385ff;
}

.follow::before {
    border: 0;
}