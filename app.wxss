/**app.wxss**/
@import './style/iconfont.wxss';
@import './style/loading.wxss';

page {
    background-color: rgb(238, 241, 247);
}


view, scroll-view, swiper, movable-area, cover-view {
	box-sizing: border-box;	
}

.container {
    height: 100%;
    box-sizing: border-box;
} 

.ico-add {
	font-size: 50rpx;
}

.fleft {
    float: left;
}

.fright {
    float: right;
}

.official-msg-title-1 {
	font-size: 40rpx;
	color: #333333;
}

.official-msg-paper-1 {
	font-size: 34rpx;
	color: #6F6F6F;
}

.m-bottom-10 {
	margin-bottom: 10rpx;
}

.m-bottom-15 {
	margin-bottom: 15rpx;
}

.m-bottom-20 {
	margin-bottom: 20rpx;
}

.color999 {
	color: #999;
}

.undefined-text {
	position: absolute;
	bottom: 100rpx;
	width: 100%;
	text-align: center;
	margin-top: 10px;
	color: #999;
}

.undefined-text-icon {
	font-size: 60rpx;
}

.colorBlue {
	color: #3385FF;
}

.colorBlue::before {
	color: #3385FF;	
}

.ellipsis1 {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.ellipsis2 {
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.overflow-hidden {
	overflow: hidden;
}

.width80p {
	width: 80%;
}

.text-right {
	text-align: right;
}

.margin-top-1-3 {
	margin-top: -3rpx;
}

.border-color {
	color: #EAEAEA;
}